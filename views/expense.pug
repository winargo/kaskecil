.w3-main(style='margin-left:300px;margin-top:43px;')
  // Header
  header.w3-container(style='padding-top:22px')
    h5
      b
        i.fa.fa-dashboard
        |  My Dashboard
  .w3-panel
    .w3-row-padding(style='margin:0 -16px')
      .row
        each a in list
          .col-md-4
            .card.text-white.bg-secondary.mb-3(style='max-width: 18rem;')
              .card-header #{a.expense_createdate}
              .card-body
                h5.card-title #{a.expense_account}
                p.card-text
                  | $ #{a.expense_amount}
                  br
                  | $ #{a.expense_account}
  // Button trigger modal
  button#fixedpost.btn.btn-outline-dark(data-toggle='modal' data-target='#Expense') +&nbsp;
  // Modal
  #Expense.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalCenterTitle' aria-hidden='true')
    .modal-dialog.modal-dialog-centered(role='document')
      .modal-content
        .modal-header
          h5#exampleModalLongTitle.modal-title Expense
          button.close(type='button' data-dismiss='modal' aria-label='Close')
            span(aria-hidden='true') &times;
        form(action='/authexpense' method='post')
          .modal-body
            .row
              .col-md-8
                .form-group
                  label(for='first') Account
                  select.custom-select(name='options')
                    option(value='0' selected='') select...
                    each b in list1
                        option(value=''+[b.account_name]) #{b.account_name}
                .form-group
                  label(for='second') Amount
                  input#second.form-control(type='number' name='amount')
                br
                label(for='to') To
                input#to.form-control(type='text' name='to')
                br
                .form-group
                  label(for='4') expense Date
                  input#4.control-form(type='date' name='inptdate')
                label(for='note1') Note
                input#note1.form-control(type='text' name='note')
          .modal-footer
            button.btn.btn-secondary(type='button' data-dismiss='modal') Close
            button.btn.btn-primary(type='submit') Save
  hr
  br

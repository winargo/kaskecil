                              option(value=''+[resu.category_name]) #{resu.category_name}
                
                  input#catnums.form-control(type='hidden' name='categnums')
                  .form-group
                    label(for='second') Amount
                    input#second.form-control(type='number' name='amount')
                  
                  .form-group
                    label(for='4') Income Date
                    input#4.form-control(type='date' name='inptdate')
                .col-md-6
                  .form-group
                    label(for='first') Income Count
                    input.form-control(type='text' name='count')
                .col-md-6
                  .form-group
                    label(for='first') Income Period
                    select.custom-select(name='period')
                      option(value='0' selected='') Select Income Period
                      option(value='Day' ) Day
                      option(value='Week' ) Week
                      option(value='Month' ) Month
                      option(value='Year' ) Year
                .col-md-8

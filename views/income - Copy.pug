                        .modal-body
                          .row
                            .col-md-8
                              label(for='from') From
                              input#from.form-control(type='text' name='from' value=a.income_from)
                              br
                              .form-group
                                label(for='first') Account
                                select.custom-select(name='editoptions')
                                  if(a.income_account==null)
                                    option(value='0' selected='') Select
                                    each b in list1
                                        option(value=''+b.account_name) #{b.account_name}
                                  else
                                    option(value=a.income_account selected='') #{a.income_account}
                                    option(value='0') Select
                                    each b in list1
                                      if(a.income_account!=[b.account_name])
                                        option(value=''+b.account_name) #{b.account_name}
                            .col-md-4
                              .form-group
                                label Account Currency
                                each y in list1
                                  if(a.income_account==[y.account_name])
                                    input#cur.form-control(type='text' value=y.account_currency disabled)
                            .col-md-8
                              label(for='3' style='margin-top:10px') Income Category
                                .select
                                  each y in listcategory
                                    if(a.income_category==[y.category_name])
                                      if(y.category_image==31)
                                        img(id='editimagename'+index style='margin-right:10px;width:36px;height:36px;display:inline-block' src='https://raw.githubusercontent.com/winargo/midascash/master/app/src/main/res/drawable/add.png')
                                      else
                                        img(id='editimagename'+index style='margin-right:10px;width:36px;height:36px;display:inline-block' src='https://raw.githubusercontent.com/winargo/midascash/master/app/src/main/res/drawable/'+a.income_category+'.png')
                                                        
                                  select.custom-select(id='editselectname'+index style='width:256px;display:inline-block' onchange='editcategname('+index+')' name='editcategory' title="Select your category") 
                                      
                                    if(a.income_category==null) 
                                      option(value='0' selected='') Select
                                      each resu in listcategory
                                        option(value=''+resu.category_name) #{resu.category_name}
                                    else
                                      option(value=''+a.income_category selected) #{a.income_category}
                                      each resu in listcategory
                                        if(a.income_category!=[resu.category_name])
                                          option(value=resu.category_name) #{resu.category_name}

                              input#incomeid.form-control(type='hidden' name='incomeid' value=a.income_id)
                              input#accs.form-control(type='hidden' name='accs' value=a.income_account)
                              input#balance.form-control(type='hidden' name='balance' value=a.income_amount)
                              .form-group
                                label(for='second') Amount
                                input#second.form-control(type='number' name='editamount' value=a.income_amount)
                              
                              .form-group
                                label(for='4') Income Date
                                each x in inputdate
                                  if(a.income_id==[x.income_id])
                                    input.form-control.incomedate(id="datepicker" type='text' name='editinptdate' value=x.income_date) 
                            .col-md-6
                              .form-group
                                label(for='first') Income Count
                                input.form-control(type='text' name='editcount' value=a.income_repeat_count)
                            .col-md-6
                              .form-group
                                label(for='first') Income Period
                        
                                select.custom-select(name='editperiod')
                                  -var period=['Day','Week','Month','Year'];
                                  
                                    if(a.income_repeat_period==null)
                                      option(value='0' selected='') Select Income Period
                                      option(value='Day' ) Day
                                      option(value='Week' ) Week
                                      option(value='Month' ) Month
                                      option(value='Year' ) Year

                                    else
                                      option(value=a.income_repeat_period selected) #{a.income_repeat_period}
                                      option(value='0' ) Select Income Period
                                      each x in period
                                        if(a.income_repeat_period!=[x])
                                          option(value=[x]) #{x}
                            .col-md-8
                              .form-group
                                  label(for='first') Income Times
                                  input.form-control(type='text' name='edittimes' value=a.income_repeat_time)
                              label(for='note1') Note
                              input#note1.form-control(type='text' name='editnote' value=a.income_notes)
                        .modal-footer
                          button.btn.btn-secondary(type='button' data-dismiss='modal') Close
                          button.btn.btn-primary(type='submit') Edit

                p.card-text
                  each y in list1
                    if(a.income_account==[y.account_name])
                      | #{y.account_fullcurrency.substring(4)} #{a.income_amount}
                  br
                  | #{a.income_category}
  
  br
